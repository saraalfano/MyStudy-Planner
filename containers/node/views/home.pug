table.table.tabellacentrale
  thead
    tr
      th(scope='col') #
      th(scope='col') Materia
      th(scope='col') Crediti
      th(scope='col') Voto
      th(scope='col') Data
      th(scope='col') 
  tbody
    script.
      var file = !{file};
      var num_rows = file.total_rows;
      var rows = file.rows
      for(var i=0;i<num_rows;i++){
        var materia = rows[i].value[0]
        var cfu = rows[i].value[1]
        var voto = rows[i].value[2]
        var data = rows[i].value[3]
        document.write(`
        <tr>
        <th class="contatore" scope="row">`+(i+1)+`</th>
        <td>`+materia+`</td>
        <td>`+cfu+`</td>
        <td>`+voto+`</td>
        <td>`+data+`</td>
        <td> <form action="remove_exam" method="post"><input type="hidden" name="esame" value="`+materia+`"><input type="submit" class="btn btn-danger elimina"  value="Elimina"></form></td>
        </tr>
      `)
      }

